<Window x:Class="ChatClient.ChatClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="ChatClient" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="390"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="Впишите сообщение" x:Name= "Send_TB" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"/>
        <ListBox x:Name="Chat_LB" Grid.ColumnSpan="4"/>
        <Button Content="Send" Grid.Column="4" Grid.Row="1" FontSize="18" Click="Send_Click"/>
        <Button Content="EXIT" Grid.Column="5" Grid.Row="1" FontSize="18" Click="Button_Click"/>
    </Grid>
</Window>
